@model IEnumerable<ToDo>
@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Créer nouvelle Tâche</a>
</p>

<div class="row">
        @foreach (var item in Model)
         {
            <div class="col-md-4 ToDoListItem">
                <h4>@(item.TaskName)</h4>
                <div> @(item.Description)</div>
                <br />
                    <div>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-default">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-default">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-default">Supprimer</a>
                    </div>
            </div>
        }
</div>

