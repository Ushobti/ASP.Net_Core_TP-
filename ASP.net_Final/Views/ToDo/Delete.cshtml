@model ToDo
@{
    ViewData["Title"] = "Suppression de la Tâche";
}

<h2>@ViewData["Title"]</h2>

<h4>Voulez-vous vraiment supprimez cette tâche ?</h4>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-default" />
    <a asp-action="Index" class="btn btn-default">Retour</a>
</form>
